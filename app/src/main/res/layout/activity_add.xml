<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eyecarewall"
    tools:context=".AddActivity">

    <include
        android:id ="@+id/advives_page_toolbar"
        layout="@layout/app_bar_layout"/>


    <ImageView
        android:id="@+id/baby1"
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="77dp"
        android:scaleType="centerInside"
        android:src="@drawable/shop1" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="127dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:padding="5.00dp"
        android:text="Next"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20.00dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/baby1"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Name :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adddescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@id/addname"
        android:text="Status :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent"    >    <TextView        android:id="@+id/name"        android:layout_width="251dp"        android:layout_height="41dp"        android:layout_alignParentTop="true"        android:layout_marginLeft="19dp"        android:layout_marginTop="14dp"        android:layout_toRightOf="@id/shop1"        android:text="Shopping "        android:textAppearance="?android:attr/textAppearanceMedium"        android:textSize="15dp"        android:textStyle="bold" />    <TextView        android:id="@+id/description"        android:layout_width="249dp"        android:layout_height="68dp"        android:layout_alignLeft="@id/name"        android:layout_alignBottom="@id/shop1"        android:layout_marginLeft="-2dp"        android:layout_marginBottom="15dp"        android:textSize="15dp"        android:text="Sprit of Baby's Care"        android:textAppearance="?android:attr/textAppearanceMedium"        android:textStyle="bold" />    <ImageView        android:id="@+id/shop1"        android:layout_width="105dp"        android:layout_height="135dp"        android:layout_alignParentLeft="true"        android:layout_alignParentTop="true"        android:layout_marginLeft="19dp"        android:layout_marginTop="12dp"        android:src="@drawable/shop1" /></RelativeLayout>